# Environment Configuration
# Copy this file to .env and modify as needed

# Server port (default: 3000)
PORT=3000

# Upload file size limit in MB (default: 100)
MAX_FILE_SIZE=100

# Rate limiting - uploads per 15 minutes per IP (default: 50)
UPLOAD_RATE_LIMIT=50

# Rate limiting - general requests per 15 minutes per IP (default: 1000)
GENERAL_RATE_LIMIT=1000